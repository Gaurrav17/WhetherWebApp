<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whether-APP</title>
    <link rel="stylesheet" href ="/style.css">
</head>
<body>
    <div class="container">
     <div class="nav">
      <form action="/submit" method="post">
        <input type="text" placeholder="enter city name" name="city" spellcheck="false">
        <button><img src="/images/search.png"></button>
      </form>
      </div>
     <div class="whether">
      <% if (locals.weatherData) { %>
        <% if (weatherData >= 25 && weatherData <= 35) { %>
            <img src="/images/clouds.png"> 
        <% } else if (weatherData >= 35 && weatherData <= 40) { %>
            <img src="/images/clear.png"> 
        <% } else if (weatherData >= 15 && weatherData <= 25) { %>
            <img src="/images/drizzle.png">
        <% } else if (weatherData >= 10 && weatherData <= 15) { %>
            <img src="/images/rain.png" > 
        <% } else if (weatherData >= -5 && weatherData <= 1) { %> 
            <img src="/images/snow.png"> 
        <% } else if (weatherData >= 2 && weatherData <= 8) { %> 
            <img src="/images/snow.png"> 
        <% } %> 
    <% }  %>
    <%if(!locals.weatherData){%>
      <img src="/images/clouds.png">
    <%}%>
 
         <%if(locals.weatherData){%>
         <h1><%=weatherData%>Â°C</h1>
         <% } else { %>
         
          <h1 class="kt" onclick="user()">Click Here</h1>
          
          
          <% } %>
          
         <%if(locals.cty){%>
         <h2><%=cty%></h2>
         <% } else { %>
          <h1 class="kt">New Delhi</h1>
          <% } %>
         <div class="bc">
          <dic class="cr">
            <img src="/images/humidity.png" alt="">
            <div class="st">
            <%if(locals.Humid){%>
            <h3><%= Humid %></h3>
            <% } else { %>
         
          <h3 class="kt" onclick="user()">70%</h3>
          <% } %>
            <p class="kt" onclick="user()">Humidity</p>
          </div>
          </div>
          <div class="kr">
            <img src="/images/wind.png" alt="">
            <div class="st2">
            <%if(locals.wnd){%>
              <h3><%= wnd %> km/h</h3>
              <% } else { %>
            <h3 class="kt"  onclick="user()">4 km/h</h3>
            <% } %>
            <p class="kt" onclick="user()">wind speed</p>
          </div>
         </div>
        </div>
     </div>
    
    </div>
    <script>
      const sect = document.querySelectorAll(".kt");
      let flag = 1;

      function user() {
    sect.forEach(element => {
        if (flag === 1) { 
            element.textContent = "Just A Demo";
            flag = 0;
        } else if(flag === 0){
            element.textContent = "Enter Valid CityName To GEt ActualOutput";
            flag = 1;
        }
    });
}
  </script>
</body>
</html>


